{% extends 'base.html.twig' %}
{% block body %}
	<section class="vh-100">
		<div class="container py-5 h-100">
			<div class="row d-flex align-items-center justify-content-center h-100 fix">
				<div class="col-md-8 col-lg-7 col-xl-6">
					<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" alt="Phone image"></div>
				<div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
					<h1 class="text-6xl pt-12 pb-8 ">
						Sign in!


					</h1>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}
						<!-- Email input -->
						<div class="form-outline mb-4">

							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg" placeholder="Email" autocomplete="email" required autofocus/>
							<label class="form-label" for="inputEmail"></label>
						</div>

						<!-- Password input -->
						<div class="form-outline mb-4">
							<input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" placeholder="Password" required/>
							<label class="form-label" for="inputPassword"></label>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div
							class="d-flex justify-content-around align-items-center mb-4">
							<!-- Checkbox -->
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="form1Example3" checked/>
								<label class="form-check-label" for="form1Example3">
									Remember me


								</label>
							</div>
							<a href="register" @click="isOpen = false">
								Register here?


							</a>
						</div>

						<!-- Submit button -->
						<button type="submit" class="btn btn-primary btn-lg btn-block">
							Sign in


						</button>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
